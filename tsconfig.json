{
  "compilerOptions": {
    "target": "es2024",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "module": "nodenext"
  },
  "exclude": ["node_modules/"],
  "include": ["src"]
}
